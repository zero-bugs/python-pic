datasource db {
  provider = "sqlite"
  url      = "file:../db/fp.db"
}

// generator
generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

// data models

// wh.schema.prisma
// status 0-init; 1-todo; 2-doing; 3-done
model WhImage {
  id          String       @unique
  views       Int
  favorites   Int
  source      String
  purity      String
  category    String
  dimension_x Int
  dimension_y Int
  resolution  String
  ratio       String
  file_size   Int
  file_type   String
  created_at  String
  path        String
  tags        String?
  uploader    String?
  status      Int          @default(0)
}

model Tag {
  id          Int          @unique
  name        String
  alias       String?
  category_id Int
  category    String
  purity      String
  created_at  String
}

model Uploader {
  username String           @unique
  group    String
}

// fp.schema.prisma
// status 0-init; 1-todo; 2-doing; 3-done
model InventoryTbl {
    name        String         @unique
    url         String
    status      Int            @default(0)
}

model ArticleTbl {
  article_id    String         @unique
  name          String
  title         String
  url           String
  summary       String
  created_at    String
  status        Int            @default(0)
}

model ImageTbl {
  url            String        @unique
  article_id     String
  type           String        @default("img")
  summary        String?
  status         Int           @default(0)
}
