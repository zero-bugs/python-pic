datasource db {
  provider = "sqlite"
  url      = "file:../db/wh.db"
}

// generator
generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

// data models
model WhImage {
  id          String       @unique
  views       Int
  favorites   Int
  source      String
  purity      String
  category    String
  dimension_x Int
  dimension_y Int
  resolution  String
  ratio       String
  file_size   Int
  file_type   String
  created_at  String
  path        String
  tags        String
  uploader    String
}

model Tag {
  id          Int         @unique
  name        String
  alias       String?
  category_id Int
  category    String
  purity      String
  created_at  String
}

model Uploader {
  username String          @unique
  group    String
}
